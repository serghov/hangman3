<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:textAllCaps="false"
    tools:context=".MainActivity"
    android:background="@drawable/background_texture_drawable"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/mainMenu"
        android:background="@drawable/background_texture_drawable"
        android:visibility="gone"
        >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="230dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/easyButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/easy"
                android:padding="10dp"
                />

            <ImageView
                android:id="@+id/mediumButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/medium"
                android:padding="10dp"
                />

            <ImageView
                android:id="@+id/hardButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hard"
                android:padding="10dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:text="@string/choose_level"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/empty_string"
        android:layout_margin="2dp"
        android:paddingTop="10dp"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/score" />

    <LinearLayout
        android:id="@+id/hintCountContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="0dp"
        android:paddingTop="5dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/arrow"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/arrow"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/arrow"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/arrow"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/personContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/questionContainer"
        android:layout_marginBottom="-10dp"
        android:layout_marginTop="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/score"
        android:src="@drawable/sm_14"
        android:padding="0dp"
        />

    <TextView
        android:id="@+id/questionContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/letterContainer"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:text="@string/empty_string"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/letterContainer"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/myKeyboard"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
    </LinearLayout>

    <TableLayout
        android:id="@+id/myKeyboard"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/keyboardRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
