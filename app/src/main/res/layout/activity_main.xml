                />
            <Button
                style="@style/keyboard_button_style"
                android:text="@string/empty_string"
                />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                style="@style/keyboard_button_style"
